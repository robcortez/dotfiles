// Saves options to chrome.storage.sync.
function save_options() {
  var showBanner = document.getElementById('showBanner').checked;
  var autoSubmit = document.getElementById('autoSubmit').checked;
  chrome.storage.sync.set({
    autoSubmit: autoSubmit,
    showBanner: showBanner
  }, function() {
    // Update status to let user know options were saved.
    var status = document.getElementById('status');
    status.textContent = 'Options saved.';
    setTimeout(function() {
      status.textContent = '';
    }, 2750);
  });
}

// Restores select box and checkbox state using the preferences
// stored in chrome.storage.
function restore_options() {
  // Use default value color = 'red' and likesColor = true.
  chrome.storage.sync.get({
    autoSubmit: true,
    showBanner: false
  }, function(items) {
    document.getElementById('autoSubmit').checked = items.autoSubmit;
    document.getElementById('showBanner').checked = items.showBanner;
    document.getElementById('showBanner').disabled = items.autoSubmit;
  });
}

// Event listener for autoSubmit checkbox
function enable_options() {
	var autoSubmitStatus = document.getElementById('autoSubmit').checked;
	if (autoSubmitStatus) {
		document.getElementById('showBanner').checked = false;
	}
	document.getElementById('showBanner').disabled = autoSubmitStatus;
}

document.addEventListener('DOMContentLoaded', function() {
	restore_options();
	document.querySelector('#autoSubmit').addEventListener('change', enable_options);
});

document.getElementById('save').addEventListener('click',
    save_options);